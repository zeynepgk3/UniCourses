<style type="text/css">
    .courses {
        background-color: #cd2444;
    }

        .courses a {
            display: inline-block;
            color: white;
            text-align: center;
            padding: 14px;
            text-decoration: none;
        }

            .courses a:hover {
                background-color: #DE4663;
            }

    .menu {
        list-style-type: none;
    }

        .menu li {
            float: left;
        }

        .menu ul {
            display: none;
            text-align: center;
            position: absolute;
            background-color: #f5f5f5;
            color: #cd2444;
            width: 100%;
            left: 0;
            box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
            z-index: 1;
            list-style-type: none;
        }

            .menu ul li a {
                color: #cd2444 !important;
                margin: auto;
            }

        .menu > li > a {
            display: block;
            color: #f5f5f5;
            font-size: 20px;
            padding: 10px;
        }

        .menu > li:hover ul {
            display: block;
        }

        .menu a:hover {
            background-color: #cd2444;
            color: #fff !important;
        }

    h5 > a:hover {
        color: #cd2444;
    }
</style>
<div class="courses">
    <div class="container d-flex align-items-center justify-content-center">
        <ul class="menu">
            @foreach (Category c in Model.Categories.Where(w => w.ParentID == null))
            {
                <li>
                    <a asp-action="Courses" asp-route-id="@c.Id">@c.CategoryName</a>
                    @if (c.SubCategories != null)
                    {
                        <ul>
                            @foreach (Category sc in c.SubCategories)
                            {
                                <li><a asp-action="Courses" asp-route-id="@sc.Id">@sc.CategoryName</a></li>

                            }
                        </ul>
                    }
                </li>
            }
        </ul>
    </div>
</div>

