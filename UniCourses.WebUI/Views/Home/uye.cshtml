@model Member
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="site-hero site-sm-hero overlay" data-stellar-background-ratio="0.5" style="background-image: url(/images/big_image_2.jpg);">
    <div class="container">
        <div class="row align-items-center justify-content-center site-hero-sm-inner">
            <div class="col-md-7 text-center">
                <input type="hidden" value="uye" name="ReturnUrl" />
                <div class="mb-5 element-animate">
                    <h1 class="mb-2">Giriş Yap</h1>
                    <p class="bcrumb"><a href="index.html">Anasayfa</a> <span class="sep ion-android-arrow-dropright px-2"></span>  <span class="current">Giriş Yap</span></p>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- END section -->

<section class="site-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-7">
                <div class="form-wrap">
                    <h2 class="mb-4">Hesabına Giriş Yap</h2>
                    <form method="post">
                        <div class="row">
                            <div class="col-md-12 form-group">
                                <label for="name">Email Adresi</label>
                                @* <span asp-validation-for="@Model.Mail" class="text-danger"></span>*@
                                <input type="text" asp-for="Mail" class="form-control py-2">
                            </div>
                        </div>
                        <div class="row mb-5">
                            <div class="col-md-12 form-group">
                                <label for="name">Parola</label>
                                @*<span asp-validation-for="@Model.Password" class="text-danger"></span>*@
                                <input type="password" asp-for="Password" class="form-control py-2">
                            </div>
                        </div>
                        <div asp-validation-summary="ModelOnly"> @ViewBag.Hata</div>

                        @*
        Şifre vs yanlış ise burada error mesajı ver.
                        *@
                        <div class="row">
                            <div class="col-md-6 form-group">
                                <input type="submit" value="Login" class="btn btn-primary px-5 py-2">
                            </div>
                        </div>
                    </form>
                   
                </div>
            </div>
        </div>
    </div>
</section>

