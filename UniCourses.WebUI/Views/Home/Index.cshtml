@model UniCourses.WebUI.ViewModels.CourseCategoryVM

@{ ViewData["Title"] = "HomePage"; }

<section class="site-hero overlay" data-stellar-background-ratio="0.5" style="background-image: url(/images/big_image_4.jpg);">
    <div class="container">
        <div class="row align-items-center justify-content-center site-hero-inner">
            <div class="col-md-10">

                <div class="mb-5 element-animate">
                    <div class="block-17">
                        <h2 class="heading text-center mb-4">Sıra arkadaşından kaçırdığın dersin tekrarını al</h2>
                        <form action="" method="post" class="d-block d-lg-flex mb-4">
                            <div class="fields d-block d-lg-flex">
                                <div class="textfield-search one-third"><input name="search" type="text" class="form-control" placeholder="Kurs ara"></div>
                                <!--kullanıcının yazacağı kelimeler etiketler arasında arama yapacak, etiketleri kursveren kursu yayınlamadan önce belirleyebilecek-->
                                <div class="select-wrap one-third">
                                    <div class="icon"><span class="ion-ios-arrow-down"></span></div>
                                    <select name="" id="" class="form-control">
                                        <option value="">Kurs Kategorisi</option>
                                        @foreach (var v in Model.Categories)
                                        {
                                            <option value="/Home/Courses/@v.ParentID">@v.CategoryName</option>
                                        }
                                        @*<option value="">PHP</option>
                                            <option value="">JavaScript</option>
                                            <option value="">Python</option>*@
                                    </select>
                                </div>
                                <div class="select-wrap one-third">
                                    <div class="icon"><span class="ion-ios-arrow-down"></span></div>
                                    <select name="" id="" class="form-control">
                                        <option value="">Sınıf</option>
                                        <option value="">1.Sınıf</option>
                                        <option value="">2.Sınıf</option>
                                        <option value="">3.Sınıf</option>
                                        <option value="">4.Sınıf</option>
                                    </select>
                                </div>
                            </div>
                            <input type="submit" class="search-submit btn btn-primary" value="Ara">
                        </form>
                        <p class="text-center mb-5">İnternette hocanızın müfredatına uygun ders videoları aramaya son!</p>
                        <p class="text-center">
                            <a asp-controller="Home" asp-action="Register" class="btn py-3 px-5">Şimdi Kayıt Ol</a>
                        </p>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>
<!-- END section -->


<section class="site-section element-animate bg-light">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-lg-3">
                <div class="media block-6 d-block">
                    <div class="icon mb-3"><span class="flaticon-book"></span></div>
                    <div class="media-body">
                        <h3 class="heading">Tekrar Et ve Öğren</h3>
                        <p>Sınıf arkadaşının anlatımı ve notları ile kaçırdığın dersi izleme fırsatı yakala veya tekrar ederek konuları pekiştir</p>
                        @*<p><a asp-controller="Home" asp-action="Courses" class="more">Daha fazlası <span class="ion-arrow-right-c"></span></a></p>*@
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-3">
                <div class="media block-6 d-block">
                    <div class="icon mb-3"><span class="flaticon-student"></span></div>
                    <div class="media-body">
                        <h3 class="heading">Senior Öğrencilerle İletişim Kur</h3>
                        <p>Dersi düzenli takip eden çalışkan öğrencilerden kurs ve yardım al</p>
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-lg-3">
                <div class="media block-6 d-block">
                    <div class="icon mb-3"><span class="flaticon-diploma"></span></div>
                    <div class="media-body">
                        <h3 class="heading">Okul Derslerini Takip Et</h3>
                        <p>İstediğin dersin dökümanlarına ulaş</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-3">
                <div class="media block-6 d-block">
                    <div class="icon mb-3"><span class="flaticon-student"></span></div>
                    <div class="media-body">
                        <h3 class="heading">Hayat Boyu Öğren</h3>
                        <p>Aldığın kurslara ömür boyu erişebilirsin.</p>
                    </div>
                </div>
            </div>

        </div>
    </div>


</section>
<!-- END section -->
<div class="site-section">
    <div class="container">
        <div class="row justify-content-center mb-5 element-animate">
            <div class="col-md-7 text-center section-heading">
                <h2 class="text-primary heading">Popüler Kurslar</h2>
            </div>
        </div>
    </div>

    <div class="container-fluid block-11 element-animate">
        <div class="nonloop-block-11 owl-carousel">
            @foreach (var item in Model.Courses)
            {
<div class="item">
    <div class="block-19">

        <div class="text">

            @*<h2 class="heading">@Html.ActionLink("Advanced JavaScript Learning", "CourseSinglePage")</h2>*@

            <a asp-controller="Home" asp-route-catname="Kategori" asp-route-courname="@UniCourses.WebUI.Common.MyTool.urlConvert(item.Name)" asp-action="CourseSinglePage" asp-route-id="@item.Id"><img src="~/img/@item.ImageURL" alt="Image" class="img-fluid"> </a>

            <p class="mb-4">@item.Description</p>
            <div class="meta d-flex align-items-center">
                <div class="rating"><i class="fa fa-star" aria-hidden="true"></i> @item.Score</div>
                <div class="price text-right">@item.Price ₺</div>
            </div>
        </div>
    </div>
</div>}




        </div>

    </div>


</div>
<!-- END section -->

<section class="site-section bg-light element-animate" id="section-counter">
    <div class="container">
        <div class="row">


            <div class="col-md-3 block-18 d-flex align-items-center" style="padding:1px;">
                <div class="icon mr-4">
                    <span class="flaticon-student"></span>
                </div>
                <div class="text">
                    <strong class="number" data-number="@ViewBag.Toplamuye">0</strong>
                    <span>Öğrenci</span>
                </div>
            </div>



            <div class="col-md-3 block-18 d-flex align-items-center" style="padding:1px;">
                <div class="icon mr-4">
                    <span class="flaticon-books"></span>
                </div>
                <div class="text">
                    <strong class="number" data-number="@Model.Courses.Count()">0</strong>
                    <span>Kurs</span>
                </div>
            </div>

            <div class="col-md-3 block-18 d-flex align-items-center" style="padding:1px;">
                <div class="icon mr-4">
                    <span class="flaticon-mortarboard"></span>
                </div>
                <div class="text">
                    <strong class="number" data-number="@ViewBag.Toplamegitmen">0</strong>
                    <span>Eğitmen</span>
                </div>
            </div>

        </div>
    </div>
</section>
<!-- END section -->
