
@{
    ViewData["Title"] = "AddVideo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="https://cdn.ckeditor.com/4.14.1/basic/ckeditor.js"></script>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<div class="py-5">
    <div class="container">
        <div class="row justify-content-center mb-5">
            <div class="col-md-7 text-center section-heading">
                <h2 class="text-primary heading">Ders Ekle</h2>
            </div>
        </div>

        <div class="row align-items-center">
            <div class="col-md-12 pr-md-5">
                <form action="#" method="post">
                    <div class="row">

                        <div class="col-md-6 form-group">
                            <label>Bölüm Seç</label>
                            <select class="form-control border-0">
                                <option>Bölüm #1</option>
                                <option>Bölüm #2</option>
                                <option>Bölüm #3</option>
                                <option>Bölüm #4</option>
                                <option>Bölüm #5</option>
                            </select>
                        </div>
                        <div class="col-md-6 form-group">
                            <label for="name">Yeni Bölüm Oluştur</label>
                            <input type="text" id="name" class="form-control py-2">
                        </div>

                    </div>
                    <div class="row">
                        <div class="form-group col-md-4">
                            <label for="exampleFormControlFile1">Ders Videonu Yükle</label>
                            <input type="file" class="form-control-file" id="exampleFormControlFile1">
                        </div>
                        <div class="form-group col-md-4">
                            <label for="exampleFormControlFile1">(Varsa) Video Altyazısı Yükle</label>
                            <input type="file" class="form-control-file" id="exampleFormControlFile1">
                        </div>
                        <div class="form-group col-md-4">
                            <label for="exampleFormControlFile1">(Varsa) Transkript Yükle</label>
                            <input type="file" class="form-control-file" id="exampleFormControlFile1">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 form-group">
                            <label for="message">Ders Açıklaması</label>
                            <textarea name="message" id="message" class="form-control py-2" cols="20" rows="8"></textarea>
                            <script>
                                CKEDITOR.replace('message');
                            </script>
                        </div>
                    </div>
                    <div class="row justify-content-between">

                        <div class="col-md-6 form-group" style="float:left;">
                            <input type="submit" value="Kursu Oluştur" class="btn btn-primary">
                        </div>
                        <div class="col-md-6 form-group" style="float:right;">
                            <input type="submit" value="İlk Videonu Ekle" class="btn btn-primary">
                        </div>
                    </div>
                </form>
            </div>

        </div>


    </div>
</div>


