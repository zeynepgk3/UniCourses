@model UniCourses.WebUI.ViewModels.CartVM
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--Section: Block Content-->
<section class="site-section">
    <div class="container">
        <!--Grid row-->
        <div class="row">

            <!--Grid column-->
            <div class="col-md-8">
                <form>

                    <!-- Card -->
                    <div class="card element-animate mb-3 border-0">
                        <div class="card-body block-28">

                            <h5 class="mb-4">Sepet (<span>2</span> kurs)</h5>

                            <div class="row mb-4">
                                @foreach (var item in Model.ListCart)
                                {
                                    if (item.MemberId.ToString() == User.Claims.FirstOrDefault(f => f.Type == System.Security.Claims.ClaimTypes.Sid).Value)
                                    {
                                        <div class="col-md-5 col-lg-3 col-xl-3">
                                            <a asp-controller="Home" asp-action="CourseSinglePage" asp-route-id="@item.Course.Id">
                                                <img src="/images/img_3.jpg" alt="Image" class="img-fluid" style="width:100%;">
                                            </a>

                                        </div>
                                        <div class="col-md-7 col-lg-9 col-xl-9">
                                            <div>


                                                <div class="d-flex justify-content-between">
                                                    <div>
                                                        <a asp-controller="Home" asp-action="CourseSinglePage" asp-route-id="@item.Course.Id">
                                                            <h5>@item.Course.Name</h5>
                                                        </a>

                                                        <a asp-controller="Home" asp-action="Profile">
                                                            <small>@item.Course.Description</small>
                                                        </a>
                                                    </div>

                                                </div>

                                                <div class="d-flex justify-content-between align-items-center">
                                                    <div>
                                                        <a type="button" class="card-link-secondary small text-uppercase mr-3"
                                                           asp-controller="Cart" asp-action="RemoveFromCart" asp-route-courseId="@item.CourseId">
                                                            <i class="fas fa-trash-alt mr-1"></i> Kaldır
                                                        </a>
                                                        <a href="#!" type="button" class="card-link-secondary small text-uppercase">
                                                            <i class="fas fa-heart mr-1"></i> İstek Listesine Taşı
                                                        </a>
                                                    </div>
                                                    <p class="mb-0"><span><strong>@item.Course.Price</strong></span></p>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                    else
                                    {
                                        <div> Sepete Hiç Ürün Eklenmemiş</div>
                                    }
                                }

                            </div>
                        </div>
                    </div>

                    <div class="card element-animate border-0">
                        <!--Start of Wishlist-->
                        <div class="card-body block-28">

                            <h5 class="mb-4">İstek Listesi (<span>2</span> kurs)</h5>

                            <div class="row mb-4">
                                <div class="col-md-5 col-lg-3 col-xl-3">

                                    <img src="/images/img_3.jpg" alt="Image" class="img-fluid" style="width:100%;">


                                </div>
                                <div class="col-md-7 col-lg-9 col-xl-9">
                                    <div>

                                        <div class="d-flex justify-content-between">
                                            <div>
                                                <h5>ASP.Net Core MVC 3.1 Music Store List E-Ticaret List E-Ticaret List E-Ticaret</h5>
                                                <small>Eğitmen: blabla Kategori:blabla</small>
                                            </div>

                                        </div>
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div>
                                                <a href="#!" type="button" class="card-link-secondary small text-uppercase mr-3">
                                                    <i class="fas fa-trash-alt mr-1"></i> Kaldır
                                                </a>
                                                <a href="#!" type="button" class="card-link-secondary small text-uppercase">
                                                    <i class="fas fa-shopping-cart mr-1"></i> Sepete Taşı
                                                </a>
                                            </div>
                                            <p class="mb-0"><span><strong>$17.99</strong></span></p>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>


                </form>
                <!--form-->
            </div>
            <!--Grid column-->
            <!--Grid column-->
            <div class="col-md-4 element-animate ">

                <!-- Card -->
                <div class="card mb-3 border-0">
                    <div class="card-body block-28">

                        <h5 class="mb-3">Toplam Fiyat</h5>
                        <h3><strong><span>&#8378;</span>@Model.Order.OrderTotal</strong></h3>
                        <a asp-action="Summary" class="btn btn-success form-control">Öde</a>


                    </div>
                </div>
                <!-- Card -->
                <!-- Card -->
                <div class="card mb-3 border-0">
                    <div class="card-body block-28">

                        <a class="dark-grey-text d-flex justify-content-between" data-toggle="collapse" href="#collapseExample1"
                           aria-expanded="false" aria-controls="collapseExample1">
                            Kupon Kullan
                            <span><i class="fas fa-chevron-down pt-1"></i></span>
                        </a>

                        <div class="collapse" id="collapseExample1">
                            <div class="mt-3">
                                <div class="md-form md-outline mb-0">
                                    <input type="text" id="discount-code1" class="form-control font-weight-light"
                                           placeholder="Enter discount code">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Card -->

            </div>
            <!--Grid column-->

        </div>
        <!--Grid row-->
    </div>
</section>
<!--Section: Block Content-->
