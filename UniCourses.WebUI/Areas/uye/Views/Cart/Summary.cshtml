@model UniCourses.WebUI.ViewModels.CartVM
@using Microsoft.Extensions.Options

@inject IOptions<UniCourses.WebUI.Utility.StripeSettings> Stripe

@{
    ViewData["Title"] = "Summary";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<form method="post">
    <br />
    <div class="backgroundWhiteBorder">
        <div class="container">
            <div class="card">
                <div class="card-header bg-dark text-light ml-0 row container">
                    <div class="col-6">
                        <i class="fa fa-shopping-cart"></i> &nbsp;
                        Order Summary
                    </div>
                    <div class="col-6 text-right">
                        <a asp-area="uye" asp-controller="Cart" asp-action="Index" class="btn btn-outline-info btn-sm">Back to Cart</a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="container rounded p-2">
                        <div class="row">
                            <div class="col-12 col-lg-6 pb-4">
                                <div class="row">
                                    <h4 class="d-flex justify-content-between align-items-center mb-3">
                                        <span class="text-info">Sipariş Detayları</span>
                                    </h4>
                                </div>
                                @foreach (var item in Model.ListCart)
                                {
                                    if (item.MemberId.ToString() == User.Claims.FirstOrDefault(f => f.Type == System.Security.Claims.ClaimTypes.Sid).Value)
                                    {
                                        <div class="row">
                                            <div class="d-none d-lg-block col-lg-1 text-center py-2">
                                                <img src="https://via.placeholder.com/150" class="rounded" width="100%" />
                                            </div>
                                            <div class="col-12 text-sm-center col-lg-6 text-lg-left">
                                                <h5><strong><a asp-controller="Home" asp-action="CourseSinglePage" asp-route-id="@item.Course.Id">@item.Course.Name</a></strong></h5>
                                                <p><small>@item.Course.Description</small></p>
                                            </div>
                                            <div class="col-12 text-sm-center col-lg-6 text-lg-left">
                                                <h5><strong><a asp-controller="Home" asp-action="CourseSinglePage" asp-route-id="@item.Course.Id">@item.Course.Name</a></strong></h5>
                                                <p><small>@item.Course.Educator</small></p>
                                            </div>
                                            <div class="col-12 text-sm-center col-lg-5 text-lg-right row">
                                                <div class="col-4 text-md-right" style="padding-top:5px;">
                                                    <h6><strong>@item.Course.Price<span class="text-muted"> &#x20BA;</span></strong></h6>
                                                </div>


                                            </div>
                                        </div>
                                        <hr />
                                    }
                                }

                            </div>
                            <div class="col-12 col-lg-5 offset-lg-1">
                                <h4 class="d-flex justify-content-between align-items-center mb-3">
                                    <span class="text-info">Order Summary:</span>
                                </h4>
                                <ul class="list-group mb-3">
                                    @{ var total = 0.0;}
                                    @foreach (var item in Model.ListCart)
                                    {
                                        <li class="list-group-item d-flex justify-content-between">
                                            <div>
                                                <h6 class="my-0">@item.Course.Name --></h6>

                                            </div>
                                            <span class="text-muted">@item.Price TL</span>
                                        </li>
                                    }


                                    <li class="list-group-item d-flex justify-content-between bg-light">
                                        <small class="text-info">Toplam Tutar (TL)</small>
                                        <strong class="text-info">@Model.Order.OrderTotal ₺</strong>
                                    </li>

                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="row">
                        <div class="col-12 col-md-8 pt-2">
                            <p style="color:maroon; font-size:14px;">Estimate Arrival Date: @DateTime.Now.AddDays(7).ToShortDateString() - @DateTime.Now.AddDays(14).ToShortDateString()</p>
                        </div>
                        <div class="col-12 col-md-4">
                            @{ var orderTotalForStripe = Model.Order.OrderTotal;}
                            <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                                    data-key="@Stripe.Value.PublishableKey"
                                    data-amount="@orderTotalForStripe*100"
                                    data-name="UniCourses"
                                    data-label="Place Order"
                                    data-description="Get Course"
                                    data-locale="auto"
                                    data-allow-remember-me="false"
                                    data-image="https://stripe.com/img/documentation/checkout/marketplace.png">
                            </script>
                            <script>
                                document.getElementsByClassName("stripe-button-el")[0].style.display = "none";
                            </script>
                            <button type="submit" value="Place Order" class="btn btn-success form-control">Place Order</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

