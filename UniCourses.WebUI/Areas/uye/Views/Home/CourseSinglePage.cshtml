}

<section class="site-hero site-sm-hero overlay" data-stellar-background-ratio="0.5" style="background-image: url(/images/big_image_2.jpg);">
    <div class="container">
        <div class="row align-items-center justify-content-center site-hero-sm-inner">
            <div class="col-md-7 text-center">
                <div class="mb-5 element-animate">
                    <h1 class="mb-2">@Model.Courses.Name </h1>
                    <p class="bcrumb"><a href="index.html">Anasayfa</a> <span class="sep ion-android-arrow-dropright px-2"></span> <a href="courses.html">Kurs</a> <span class="sep ion-android-arrow-dropright px-2"></span>  <span class="current">@Model.Courses.Name</span></p>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- END section -->
@if (User.Identity.IsAuthenticated)
{
    @if (Model.Cart == null)
    {<form method="post" class="@Model.Cart">
            <input type="hidden" asp-for="@Model.Cart.CourseId" value="@Model.Courses.Id" />
            <div class="container backgroundWhite">
                <div class="card">
                    <div class="card-footer">
                        <div class="row">
                            <div class="col-12 col-md-6 pb-1">
                                <a lass="btn btn-success form-control  btn-square btn-lg" style="height:50px;" asp-action="Index">Back to List</a>
                            </div>
                            <div class="col-12 col-md-6 pb-1">
                                <button type="submit" asp-area="uye" asp-controller="Home" asp-action="AddToCart" asp-route-id="@Model.Courses.Id" value="Add to Cart" class="btn btn-primary btn-square btn-lg form-control" style="height:50px;">Add to Cart</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    }
    else
    {
        <div class="col-12 col-md-6 pb-1">
            <a asp-area="uye" asp-controller="Home" asp-action="Sepet" value="Add to Cart" class="btn btn-primary btn-square btn-lg form-control" style="height:50px;">Sepete Git</a>
        </div>
    }
}
else
{
    <div class="col-12 col-md-6 pb-1">
        <a asp-controller="Home" asp-action="Register" value="Add to Cart" class="btn btn-primary btn-square btn-lg form-control" style="height:50px;">
            <i class="fa fa-plus-square-o" aria-hidden="true"></i>
